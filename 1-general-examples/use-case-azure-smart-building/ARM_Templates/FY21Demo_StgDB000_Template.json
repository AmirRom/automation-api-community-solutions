{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"storageAccountName": {
            "type": "string",
			"defaultValue": "[concat('stg', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "Specifies the name of the Azure Storage account."
            }
        },
        "container-sB": {
            "type": "string",
            "defaultValue": "smartbuilding",
            "metadata": {
                "description": "Specifies the prefix of the blob container names."
            }
        },
		"sqlServerName": {
            "type": "string",
            "defaultValue": "[concat('slqsb', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "The name of the SQL logical server."
            }
        },
        "sqlDBName": {
            "type": "string",
            "defaultValue": "SmartBuildingDB",
            "metadata": {
                "description": "The name of the SQL Database."
            }
        },
		"location": {
			"type": "string",
			"defaultValue": "[resourceGroup().location]",
			"metadata": {
				"description": "Location for all resources."
			}
		},
		"administratorLogin": {
            "type": "string",
            "metadata": {
                "description": "The administrator username of the SQL logical server."
            }
        },
        "administratorLoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The administrator password of the SQL logical server."
            }
        }
    },
    "variables": {
	},
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            }
        },
		{
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2018-07-01",
            "name": "[concat(parameters('storageAccountName'), '/default/', parameters('container-sB'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ]
        },
		{
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2019-06-01-preview",
            "name": "[parameters('sqlServerName')]",
            "location": "[parameters('location')]",
            "properties": {
                "administratorLogin": "[parameters('administratorLogin')]",
                "administratorLoginPassword": "[parameters('administratorLoginPassword')]"
            },
            "resources": [
                {
                    "type": "databases",
                    "apiVersion": "2019-06-01-preview",
                    "name": "[parameters('sqlDBName')]",
                    "sku": {
                        "name": "Standard",
                        "tier": "Standard"
                    },
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', concat(parameters('sqlServerName')))]"
                    ]
                }
            ]
        }
    ],
	"outputs": {
		"storageAccountName": {
			"type": "string",
			"value": "[parameters('storageAccountName')]"
		},
		"sqlServerName": {
			"type": "string",
			"value": "[parameters('sqlServerName')]"
		}
	}
}